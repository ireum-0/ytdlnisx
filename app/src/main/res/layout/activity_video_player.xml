<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/video_player_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <FrameLayout
        android:id="@+id/player_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintHeight_max="320dp">

        <androidx.media3.ui.PlayerView
            android:id="@+id/player_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:keepScreenOn="true"
            android:background="@android:color/black"
            android:fitsSystemWindows="true"
            android:focusable="true"
            app:controller_layout_id="@layout/player_controller"
            app:use_controller="true"
            app:show_buffering="when_playing" />

        <View
            android:id="@+id/gesture_overlay_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/player_controls_bg"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/seek_overlay"
            android:layout_width="320dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/seek_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="44sp"
                android:text="0:00" />

            <TextView
                android:id="@+id/seek_delta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:text="(+0:00)" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/value_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="16dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/value_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:text="0" />
        </FrameLayout>

        <TextView
            android:id="@+id/hold_speed_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/player_gesture_chip"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:text="x2.0"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/left_bar_overlay"
            android:layout_width="72dp"
            android:layout_height="220dp"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="16dp"
            android:padding="8dp"
            android:visibility="gone">

            <FrameLayout
                android:id="@+id/left_bar_container"
                android:layout_width="48dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:background="@drawable/player_bar_bg">

                <View
                    android:id="@+id/left_bar_fill"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/player_bar_fill" />
            </FrameLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/right_bar_overlay"
            android:layout_width="72dp"
            android:layout_height="220dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="16dp"
            android:padding="8dp"
            android:visibility="gone">

            <FrameLayout
                android:id="@+id/right_bar_container"
                android:layout_width="48dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:background="@drawable/player_bar_bg">

                <View
                    android:id="@+id/right_bar_fill"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/player_bar_fill" />
            </FrameLayout>
        </FrameLayout>
    </FrameLayout>

    <androidx.media3.ui.PlayerControlView
        android:id="@+id/player_time_bar"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:background="@android:color/black"
        app:controller_layout_id="@layout/player_timebar_only"
        app:show_timeout="0"
        android:layout_marginTop="-6dp"
        app:layout_constraintTop_toBottomOf="@id/player_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/video_queue_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="0dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="12dp"
        android:scrollbars="vertical"
        android:background="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/queue_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <LinearLayout
        android:id="@+id/queue_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="-6dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/player_time_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/queue_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btn_repeat_mode"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/repeat_mode"
            android:src="@drawable/baseline_loop_24"
            android:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/btn_shuffle_queue"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/shuffle_queue"
            android:src="@drawable/baseline_compare_arrows_24"
            android:tint="@android:color/white" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
